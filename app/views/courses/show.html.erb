<ul class="nav">
  <li class="nav-item">
    <%= link_to "New Article", new_course_article_path(@course, @article), class:"nav-link" %></li>
  </li>
  <li class="nav-item">
    <%= link_to 'Back', courses_path, class:"nav-link" %>
  </li>
</ul>

<p id="notice"><%= notice %></p>
<p>
  <strong>Code:</strong>
  <%= @course.code.upcase %>
</p>
<p>
  <strong>Title:</strong>
  <%= @course.title.upcase %>
</p>

<ul>
  <% @tags.order("name asc").each do |tag| %>
    <% if tag.articles.size > 0 %>
      <li><%= link_to tag.name, course_tags_path(@course, tag) %> <%= tag.articles.size %></li>
    <% end %>
  <% end %>
</ul>