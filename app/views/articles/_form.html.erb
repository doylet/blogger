
<div class="col-md-12 col-lg-8">

<%= form_with(model: [@course, article], multipart: true, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "col-xs-4 control-label" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :subject, class: "col-xs-4 control-label" %>
    <%= form.text_field :subject, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :question, class: "col-xs-4 control-label" %>
    <%= form.text_area :question, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :answer, class: "col-xs-4 control-label" %>
    <%= form.text_area :answer, class:"form-control" %>
  </div>
  <div class="form-group">
      <%= form.label :tag_list, class: "col-xs-4 control-label" %><br />
      <%= form.text_field :tag_list, class:"form-control" %>
  </div>
  <div class="form-group">
    <% if @article.image.exists? %>
    <%= image_tag @article.image.url(:small) %><br/>
    <% end %>
    <%= form.label :image, "Attach an Image" %><br />
    <%= form.file_field :image %>
  </div>
  
  <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
  <%= link_to "Cancel", course_articles_path, class: "btn btn-default btn-light" %>
  
<% end %>
</div>


