
<div class="col-xs-12 col-md-6">
<%= form_with(model: [@course, article], local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "col-xs-4 control-label" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :subject, class: "col-xs-4 control-label" %>
    <%= form.text_field :subject, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :question, class: "col-xs-4 control-label" %>
    <%= form.text_area :question, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :answer, class: "col-xs-4 control-label" %>
    <%= form.text_area :answer, class:"form-control" %>
  </div>
  <div class="form-group">
      <%= form.label :tag_list, class: "col-xs-4 control-label" %><br />
      <%= form.text_field :tag_list, class:"form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
  
<% end %>
</div>

