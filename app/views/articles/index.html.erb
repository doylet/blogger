<% if notice %>
<div id="notice" class="alert alert-primary" role="alert"><%= notice %></div>
<% end %>
<div>
</div>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tags</th>
      <th>Tutorial</th>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>  
        <% article.tags.each do |tag| %>
          <% if article.tags.size > 0 %>
            <span style="background: #EEE;"><%= link_to tag.name, tag %></span>,<br/>
          <% end %>
        <% end %>
        </td>
        <td><%= link_to article.title, article %></td>
        <td><%= markdown(article.question) %></td>
        <td><%= markdown(article.answer) %></td>
        <td>
        <%= link_to 'Show', article %> |
        <%= link_to 'Edit', edit_article_path(article) %> |
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
<%= link_to 'Home', tags_path %> | <%= link_to 'New Article', new_article_path %>
</div>
