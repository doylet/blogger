
<div class="form-group mt-16">
  <%= form_for [@article, @comment] do |form| %>
    <div class="form-group">
    <p>
      <%= form.label :body, "Create notes" %><br/>
      <%= form.text_area :body, class:"form-control" %>
    </p>
    </div>
    <div class="form-group">
      <% if @comment.image.exists? %>
        <%= image_tag @comment.image.url(:small) %><br/>
      <% end %>
      <%= form.label :image, "Attach an Image" %><br />
      <%= form.file_field :image %>
    </div>
    <p>
      <%= form.submit 'Submit', class: "btn btn-default btn-primary" %>
    </p>
  <% end %>
</div>