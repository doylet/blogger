<%= link_to 'Tags', course_tags_path %> | <%= link_to 'Home', root_path %> 
<hr>
<p>Articles Tagged with: <strong><%= course.tag.name %></strong> (<%= link_to 'edit', edit_course_tag_path(course, @tag) %>)</p>
<hr>
<div>
<% course.tag.articles.each do |article| %>
    <div>
      <p><%= link_to course_article.title, course_article_path(article) %></p>
      <strong>Question</strong>
      <p><%= markdown(article.question) %></p>
      <strong>Answer</strong>
      <p><%= markdown(article.answer) %></p>
    </div>
    <%= link_to 'Edit', {controller: "articles", action: "edit"}, class:"btn btn-primary btn-sm" %>
    <hr>
  <% end %>
</div>