<%= link_to 'Tags', tags_path %> | <%= link_to 'Home', root_path %> 
<hr>
<p>Articles Tagged with: <strong><%= @tag.name %></strong> (<%= link_to 'edit', edit_tag_path(@tag) %>)</p>
<hr>
<div>
<% @tag.articles.each do |article| %>
    <div>
      <p><%= link_to article.title, article_path(article) %></p>
      <strong>Question</strong>
      <p><%= markdown(article.question) %></p>
      <strong>Answer</strong>
      <p><%= markdown(article.answer) %></p>
    </div>
    <%= link_to 'Edit', {controller: "articles", action: "edit"}, class:"btn btn-primary btn-sm" %>
    <hr>
  <% end %>
</div>