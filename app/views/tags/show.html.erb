<ul class="nav">
  <li class="nav-item">
    <%= link_to 'Home', root_path, class:"nav-link" %> 
  </li>
  <li class="nav-item">
    <%= link_to 'Back', course_tags_path, class:"nav-link" %>
  </li>
</ul>
<hr>
<p>Articles Tagged with: <strong><%= @tag.name.camelize %></strong> (<%= link_to 'edit', edit_course_tag_path(@course, @tag) %>)</p>
<hr>
<div>
<% @tag.articles.each do |article| %>
    <div>
      <p><%= link_to article.title, course_tag_article_path(@course, @tag, article) %></p>
      <strong>Question</strong>
      <p><%= markdown(article.question) %></p>
      <strong>Answer</strong>
      <p><%= markdown(article.answer) %></p>
    </div>
    <%= link_to 'Edit', edit_course_article_path(@course, article), class:"btn btn-primary btn-sm" %>
    <hr>
  <% end %>
</div>