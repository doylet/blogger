<div class="col">
<%= form_with(model: [@course, tag], local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
      <%= form.label :description, class: "col-xs-12 control-label" %>
      <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <% if @tag.image.exists? %>
    <%= image_tag @tag.image.url(:small) %><br/>
    <% end %>
    <%= form.label :image, "Attach an Image" %><br />
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Submit", class: "btn btn-default btn-primary btn-sm" %>
  <%= link_to "Cancel", course_tag_path(@course, @tag), class: "btn btn-default btn-primary btn-sm" %>
  
<% end %>
</div>