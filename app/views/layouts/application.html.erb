<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

  </head>

  <body>
    <% if notice %>
    <div id="notice" class="alert alert-primary" role="alert"><%= notice %></div>
    <% end %>
    
    <%= yield %>
    <div class="container col-lg-6 col-md-12">

    <% if logged_in? %>
    
      <ul class="nav fixed-top mr-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Articles', articles_path, class:"nav-link" %> 
        </li>
        <li class="nav-item">
        <%= link_to "New Article", new_article_path, class:"nav-link" %></li>
        </li>
        <li class="nav-item">
          <%= link_to "logout", logout_path, class:"nav-link" %>
        </li>
      </ul>
      <%= "Logged in as #{current_user.username}" %>
    <% else %>
    
      <ul class="nav fixed-top mr-auto">
        <li class="nav-item"><%= link_to "login", login_path, class:"nav-link" %></li>
      </ul>

    <% end %>
    </div>
  </body>
</html>
